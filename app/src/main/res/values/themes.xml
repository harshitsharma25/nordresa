<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Material 3 Theme -->
    <style name="Base.Theme.NordResa" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary_app_color</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/warm_gray</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Background & Surface -->
        <item name="colorSurface">@color/background_light</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_background</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_app_color</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/primary_app_color</item>

        <!-- Error -->
        <item name="colorError">@color/snackbar_error_color</item>
        <item name="colorOnError">@color/white</item>

        <!-- Typography and Shapes: Use defaults or customize if needed -->
        <!-- <item name="shapeAppearanceSmallComponent">...</item> -->
        <!-- <item name="textAppearanceHeadlineSmall">...</item> -->

    </style>

    <!-- Final Theme for the app -->
    <style name="Theme.NordResa" parent="Base.Theme.NordResa" />
</resources>
